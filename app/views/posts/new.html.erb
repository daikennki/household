<div class="contents row">
  <div class="container">
    <h3>収支 入力</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.text_field :date, placeholder: "日付" %>
      <%= form.text_field :category_id, placeholder: "カテゴリ" %>
      <%= form.text_field :price, placeholder: "値段" %>
      <%= form.submit "登録する", class: "custom-submit-button" %>
    <% end %>
  </div>
</div>